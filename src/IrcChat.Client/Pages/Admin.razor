@page "/admin"
@using IrcChat.Shared.Models
@using IrcChat.Client.Services
@using IrcChat.Client.Components
@using static IrcChat.Client.Components.AdminStatsGrid
@using static IrcChat.Client.Components.AdminUsersTable
@inject HttpClient Http
@inject AuthStateService AuthState
@inject NavigationManager Navigation

<PageTitle>Administration</PageTitle>

@if (!AuthState.IsAuthenticated)
{
    Navigation.NavigateTo("/admin/login");
}
else
{
    <div class="admin-container">
        <AdminDashboard Username="@AuthState.Username"
                       Stats="@stats"
                       TopUsers="@topUsers"
                       OnLogoutClicked="Logout" />
    </div>
}

@code {
    private AdminStats? stats;
    private List<UserStats> topUsers = new();

    protected override async Task OnInitializedAsync()
    {
        if (AuthState.IsAuthenticated)
        {
            await LoadAdminData();
        }
    }

    private void Logout()
    {
        AuthState.ClearAuthState();
        Http.DefaultRequestHeaders.Authorization = null;
        Navigation.NavigateTo("/admin/login");
    }

    private async Task LoadAdminData()
    {
        try
        {
            var statsResponse = await Http.GetFromJsonAsync<AdminStats>("/api/admin/stats");
            if (statsResponse != null)
            {
                stats = statsResponse;
            }

            var usersResponse = await Http.GetFromJsonAsync<List<UserStats>>("/api/admin/users");
            if (usersResponse != null)
            {
                topUsers = usersResponse;
            }
        }
        catch { }
    }
}