@using static IrcChat.Client.Components.AdminStatsGrid
@using static IrcChat.Client.Components.AdminUsersTable

<div class="admin-panel">
    <AdminHeader Username="@Username" OnLogoutClicked="OnLogoutClicked" />

    <AdminStatsGrid Stats="@Stats" />

    <AdminUsersTable Users="@TopUsers" />

    <a href="/" class="back-link">← Retour au chat</a>
</div>

@code {
    [Parameter]
    public string Username { get; set; } = "";

    [Parameter]
    public AdminStats? Stats { get; set; }

    [Parameter]
    public List<UserStats> TopUsers { get; set; } = new();

    [Parameter]
    public EventCallback OnLogoutClicked { get; set; }
}